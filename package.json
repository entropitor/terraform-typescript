  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@datacamp/eslint-config": "^5.0.0",
    "@datacamp/prettier-config": "^2.1.0",
    "@types/jest": "^26.0.21",
    "babel-jest": "^26.6.3",
    "eslint": "^7.22.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
