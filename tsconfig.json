{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "lib": ["ESNext.Array", "ES2019", "ES2020", "DOM"],
    "composite": true,
    "declaration": true,
    "declarationMap": false,

    "baseUrl": ".",
    "paths": {
      "@terraform-typescript/*": ["../../libs/*/src"]
    }
  }
}
